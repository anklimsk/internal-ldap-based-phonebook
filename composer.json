{
	"name": "anklimsk/internal-ldap-based-phonebook",
	"description": "Internal LDAP-based phonebook",
	"type": "project",
	"license": "MIT",
	"require": {
		"php": ">=5.4.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^3.7",
		"cakephp/cakephp-codesniffer": "^1.0.0"
	},
	"config": {
		"vendor-dir": "vendors/",
		"process-timeout": 0
	},
	"bin": [
		"app/Cake/Console/cake"
	],
	"scripts": {
		"check": [
			"@cs-check",
			"@test"
		],
		"cs-check": "./vendors/bin/phpcs -p --extensions=php --standard=CakePHP ./app",
		"test": "./app/Cake/Console/cake test app AllApp --stderr --app ./app",
		"pre-update-cmd": [
			"php -r \"copy('app/Config/cakeldap.php', 'app/Config/cakeldap.php.bkp');\"",
			"php -r \"copy('app/Config/config.php', 'app/Config/config.php.bkp');\"",
			"php -r \"copy('app/Config/core.php', 'app/Config/core.php.bkp');\"",
			"php -r \"copy('app/Config/database.php', 'app/Config/database.php.bkp');\""
		],
		"post-update-cmd": [
			"php -r \"copy('app/Config/cakeldap.php.bkp', 'app/Config/cakeldap.php');\"",
			"php -r \"copy('app/Config/config.php.bkp', 'app/Config/config.php');\"",
			"php -r \"copy('app/Config/core.php.bkp', 'app/Config/core.php');\"",
			"php -r \"copy('app/Config/database.php.bkp', 'app/Config/database.php');\""
		]
	}
}
